<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg"
    android:orientation="vertical"
    tools:context="com.volcano.player.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@mipmap/base_titlebar_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_audio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="音乐"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/selector_title_text"/>
            <TextView
                android:id="@+id/tv_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:text="视频"
                android:textColor="@color/selector_title_text"/>
        </LinearLayout>
    </LinearLayout>
        <View
            android:id="@+id/vw_indicator"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:background="@color/green">
        </View>
        <android.support.v4.view.ViewPager
            android:id="@+id/vw_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>



</LinearLayout>
